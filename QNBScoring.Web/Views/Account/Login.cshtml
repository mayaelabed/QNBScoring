@model QNBScoring.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
}
<h2>Connexion</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="NomUtilisateur"></label>
        <input asp-for="NomUtilisateur" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="MotDePasse"></label>
        <input asp-for="MotDePasse" class="form-control" />
        <span asp-validation-for="MotDePasse" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Se connecter</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
