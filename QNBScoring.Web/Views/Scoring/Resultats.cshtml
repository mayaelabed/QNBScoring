@model QNBScoring.Core.Entities.Score

@{
    ViewData["Title"] = "Résultat du Scoring";
    var client = Model.Demande.Client;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container py-5">

    <div class="text-center mb-4">
        <h2 class="display-6 text-primary">🔢 Résultat du Scoring</h2>
        <p class="text-muted">Détails complets pour la demande analysée</p>
    </div>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info">@TempData["Info"]</div>
    }

    <div class="row g-4">
        <!-- Informations client -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    🧍 Informations du client
                </div>
                <div class="card-body">
                    <p><i class="bi bi-person"></i> <strong>Nom :</strong> @client.Nom @client.Prenom</p>
                    <p><i class="bi bi-credit-card-2-front"></i> <strong>CIN :</strong> @client.CIN</p>
                    <p><i class="bi bi-briefcase"></i> <strong>Profession :</strong> @client.Profession</p>
                    <p><i class="bi bi-grid-1x2"></i> <strong>Classification SED :</strong> @client.ClassificationSED</p>
                    <p><i class="bi bi-exclamation-triangle"></i> <strong>Incidents :</strong> @(client.ADesIncidents ? "Oui" : "Non")</p>
                    <p><i class="bi bi-calendar-check"></i> <strong>Date entrée :</strong> @client.DateEntreeEnRelation.ToShortDateString()</p>
                </div>
            </div>
        </div>

        <!-- Résultat score -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-success text-white">
                    🧾 Résultat de l’analyse
                </div>
                <div class="card-body">
                    <p><strong>Score :</strong> <span class="badge bg-success fs-6">@Model.Valeur</span></p>
                    <p>
                        <strong>Décision :</strong>
                        @if (Model.Decision == "Accepté")
                        {
                            <span class="badge bg-success">Accepté</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Refusé</span>
                        }
                    </p>
                    <p><strong>Commentaire :</strong> @Model.Commentaire</p>
                    <!-- Dans Resultats.cshtml, après le commentaire existant -->
                    <div class="col-md-12 mt-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-info text-white">
                                📋 Détails du chéquier demandé
                            </div>
                            <div class="card-body">
                                <p><strong>Type :</strong> @Model.Demande.TypeChequier</p>
                                <p><strong>Nombre de chéquiers :</strong> @Model.Demande.NombreChequiers</p>
                                <p><strong>Mode de livraison :</strong> @Model.Demande.ModeLivraison</p>
                            </div>
                        </div>
                    </div>

                    <a class="btn btn-outline-success w-100 mt-3" asp-action="TéléchargerPDF" asp-route-scoreId="@Model.Id">
                        🧾 Télécharger le rapport PDF
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row mt-4">
        <div class="col-md-4">
            <form asp-action="Recalculer" asp-controller="Scoring" method="post">
                <input type="hidden" name="demandeId" value="@Model.DemandeChequierId" />
                <button type="submit" class="btn btn-warning w-100">
                    🔁 Recalculer le score
                </button>
            </form>
        </div>
        <div class="col-md-4">
            <form asp-action="Supprimer" asp-controller="Scoring" method="post">
                <input type="hidden" name="scoreId" value="@Model.Id" />
                <button type="submit" class="btn btn-danger w-100">
                    🗑 Supprimer le score
                </button>
            </form>
        </div>
        <div class="col-md-4">
            <a class="btn btn-secondary w-100" asp-controller="Home" asp-action="Dashboard">
                ↩️ Retour à l'accueil
            </a>
        </div>
    </div>
</div>
