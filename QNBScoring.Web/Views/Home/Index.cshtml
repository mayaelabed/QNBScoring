@model DashboardViewModel
@{
    ViewData["Title"] = "Bienvenue - QNB Scoring";
    Layout = "_Layout";
}


<div class="welcome-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="welcome-card p-4 p-md-5">
                    <div class="text-center mb-5">
                        <img src="~/images/qnb-logo.jpeg" alt="QNB Logo" height="80" class="mb-4">
                        <h1 class="display-4 fw-bold mb-3 text-primary">QNB Scoring Platform</h1>
                        <p class="lead mb-4">Solution intelligente de gestion et scoring des demandes financières</p>

                        <!-- Indicateurs statistiques -->
                        <div class="row g-4 mb-5">
                            <div class="col-md-4">
                                <div class="stat-card p-3 bg-white rounded shadow-sm">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                            <i class="bi bi-file-earmark-text fs-2 text-primary"></i>
                                        </div>
                                        <div>
                                            <h3 class="mb-0 fw-bold" id="totalDemands">@Model.TotalDemandes</h3>

                                            <small class="text-muted">Demandes totales</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stat-card p-3 bg-white rounded shadow-sm">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                                            <i class="bi bi-check-circle fs-2 text-success"></i>
                                        </div>
                                        <div>
                                            <h3 class="mb-0 fw-bold" id="approvedDemands">@Model.DemandesApprouvees</h3>
                                            <small class="text-muted">Approuvées</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stat-card p-3 bg-white rounded shadow-sm">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-danger bg-opacity-10 p-3 rounded me-3">
                                            <i class="bi bi-x-circle fs-2 text-danger"></i>
                                        </div>
                                        <div>
                                            <h3 class="mb-0 fw-bold" id="rejectedDemands">@Model.DemandesRejetees</h3>
                                            <small class="text-muted">Rejetées</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions principales -->
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm hover-effect">
                                <div class="card-body text-center p-4">
                                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                                        <i class="bi bi-plus-circle fs-1 text-primary"></i>
                                    </div>
                                    <h4 class="card-title mb-3">Nouvelle Demande</h4>
                                    <p class="card-text text-muted mb-4">Créer une nouvelle demande de chéquier</p>
                                    <a asp-controller="Demande" asp-action="Create" class="btn btn-primary stretched-link">
                                        Commencer <i class="bi bi-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm hover-effect">
                                <div class="card-body text-center p-4">
                                    <div class="bg-info bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                                        <i class="bi bi-list-ul fs-1 text-info"></i>
                                    </div>
                                    <h4 class="card-title mb-3">Liste des Demandes</h4>
                                    <p class="card-text text-muted mb-4">Consulter l'historique des demandes</p>
                                    <a asp-controller="Demande" asp-action="Index" class="btn btn-info text-white stretched-link">
                                        Voir <i class="bi bi-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card h-100 border-0 shadow-sm hover-effect">
                                <div class="card-body text-center p-4">
                                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle d-inline-block mb-3">
                                        <i class="bi bi-upload fs-1 text-warning"></i>
                                    </div>
                                    <h4 class="card-title mb-3">Importer Fichier</h4>
                                    <p class="card-text text-muted mb-4">Importez des données depuis Excel</p>
                                    <a asp-controller="Import" asp-action="Index" class="btn btn-warning stretched-link">
                                        Importer <i class="bi bi-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Dernières activités -->
                    <div class="list-group" id="recentActivities">
                        @if (Model.DernieresActivites.Any())
                        {
                            foreach (var activity in Model.DernieresActivites)
                            {
                                var icon = activity.Status switch
                                {
                                    "success" => "bi-check-circle",
                                    "danger" => "bi-x-circle",
                                    _ => "bi-info-circle"
                                };

                                var statusClass = activity.Status switch
                                {
                                    "success" => "text-success",
                                    "danger" => "text-danger",
                                    _ => "text-info"
                                };

                                <div class="list-group-item border-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <i class="bi @icon fs-4 @statusClass"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@activity.Action</h6>
                                            <small class="text-muted">@activity.Utilisateur • @activity.Temps</small>
                                        </div>
                                        <div>
                                            <i class="bi bi-chevron-right text-muted"></i>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item border-0 py-3">
                                <span class="text-muted">Aucune activité récente.</span>
                            </div>
                        }
                    </div>
                    <div class="mt-3 text-end">
                        <a asp-controller="Activites" asp-action="Index" class="btn btn-link">
                            Voir tout l'historique des activités <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>