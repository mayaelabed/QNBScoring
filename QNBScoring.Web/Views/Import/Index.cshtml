@{
    Layout = "_Layout";
    ViewData["Title"] = "Importer des transactions Excel";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Carte principale avec ombre -->
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-file-excel fa-2x me-3"></i>
                        <div>
                            <h2 class="h4 mb-0">Importation des Transactions</h2>
                            <p class="small mb-0">Importez vos données financières depuis un fichier Excel</p>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Zone de notification améliorée -->
                    @if (TempData["ImportResult"] != null)
                    {
                        <div class="alert alert-dismissible fade show @(TempData["ImportSuccess"] != null && (bool)TempData["ImportSuccess"] ? "alert-success" : "alert-danger")">
                            <div class="d-flex align-items-center">
                                <i class="fas @(TempData["ImportSuccess"] != null && (bool)TempData["ImportSuccess"] ? "fa-check-circle" : "fa-exclamation-triangle") me-2"></i>
                                <div>@TempData["ImportResult"]</div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Zone de dépôt de fichier améliorée -->
                    <form asp-action="Importer" method="post" enctype="multipart/form-data" class="dropzone needsclick" id="fileUploadForm">
                        <div class="mb-4 text-center">
                            <div class="file-upload-wrapper">
                                <input type="file" name="file" id="file" class="form-control visually-hidden" accept=".xlsx,.xls" required />
                                <label for="file" class="file-upload-label btn btn-outline-primary rounded-pill py-3 px-4">
                                    <i class="fas fa-cloud-upload-alt fa-2x mb-2"></i>
                                    <h5 class="mb-1">Glissez-déposez votre fichier ici</h5>
                                    <p class="small text-muted mb-2">ou cliquez pour sélectionner</p>
                                    <span class="badge bg-light text-dark">Format supporté: .xlsx, .xls</span>
                                </label>
                                <div id="fileInfo" class="mt-3 small text-muted"></div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Retour à l'accueil
                            </a>
                            <button type="submit" class="btn btn-primary px-4" id="submitBtn" >
                                <i class="fas fa-file-import me-1"></i> Importer
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Section d'aide -->
                <div class="card-footer bg-light">
                    <div class="accordion" id="helpAccordion">
                        <div class="accordion-item border-0">
                            <h3 class="accordion-header" id="headingHelp">
                                <button class="accordion-button collapsed bg-transparent shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHelp">
                                    <i class="fas fa-question-circle text-primary me-2"></i> Instructions d'importation
                                </button>
                            </h3>
                            <div id="collapseHelp" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                                <div class="accordion-body small">
                                    <ol>
                                        <li>Préparez votre fichier Excel avec les colonnes requises</li>
                                        <li>Assurez-vous que les données sont dans le premier onglet</li>
                                        <li>Vérifiez que les formats de date et montants sont corrects</li>
                                        <li>La première ligne doit contenir les en-têtes de colonnes</li>
                                        <li>Taille maximale du fichier: 10MB</li>
                                    </ol>
                                    <a href="#" class="btn btn-sm btn-outline-primary mt-2">
                                        <i class="fas fa-download me-1"></i> Télécharger un modèle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .file-upload-label {
            display: block;
            border: 2px dashed #dee2e6;
            transition: all 0.3s;
            cursor: pointer;
            width: 100%;
        }

            .file-upload-label:hover {
                border-color: #0d6efd;
                background-color: rgba(13, 110, 253, 0.05);
            }

        .dropzone.dragover .file-upload-label {
            border-color: #0d6efd;
            background-color: rgba(13, 110, 253, 0.1);
        }

        .card-header {
            border-radius: 0.375rem 0.375rem 0 0 !important;
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        // Gestion du drag and drop
        const form = document.getElementById('fileUploadForm');
        const fileInput = document.getElementById('file');
        const fileInfo = document.getElementById('fileInfo');
        const submitBtn = document.getElementById('submitBtn');
        const fileLabel = document.querySelector('.file-upload-label');

        // Drag and drop functionality
        form.addEventListener('dragover', (e) => {
            e.preventDefault();
            form.classList.add('dragover');
        });

        form.addEventListener('dragleave', () => {
            form.classList.remove('dragover');
        });

        form.addEventListener('drop', (e) => {
            e.preventDefault();
            form.classList.remove('dragover');

            if (e.dataTransfer.files.length) {
                fileInput.files = e.dataTransfer.files;
                updateFileInfo(e.dataTransfer.files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (fileInput.files.length) {
                updateFileInfo(fileInput.files[0]);
            }
        });

        function updateFileInfo(file) {
            if (file) {
                const fileSize = (file.size / (1024 * 1024)).toFixed(2); // en MB
                fileInfo.innerHTML = `
                    <div class="d-flex align-items-center">
                        <i class="fas fa-file-excel text-success me-2"></i>
                        <div>
                            <strong>${file.name}</strong> (${fileSize} MB)
                        </div>
                    </div>
                `;
                submitBtn.disabled = false;
                fileLabel.innerHTML = `
                    <i class="fas fa-check-circle text-success fa-2x mb-2"></i>
                    <h5 class="mb-1">Fichier sélectionné</h5>
                    <p class="small text-muted mb-2">${file.name}</p>
                `;
            }
        }

        // Validation du formulaire
        form.addEventListener('submit', function(e) {
            const file = fileInput.files[0];
            if (!file) {
                e.preventDefault();
                return;
            }

            // Afficher un indicateur de chargement
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span> Importation en cours...';
            submitBtn.disabled = true;
        });
    </script>
}